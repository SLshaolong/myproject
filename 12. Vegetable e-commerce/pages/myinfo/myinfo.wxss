/* pages/myinfo/myinfo.wxss */
@import '../../utils//back//back.wxss';
page{
    background-color: #f5f5f5;
}
.container{
    padding-top:92rpx ;
    position: relative;
    background-color: #fff;

}
.back{
    padding: 20rpx 0;
}
.title{
    position: absolute;
    top: 132rpx;
    left: 50%;
    transform: translateX(-50%);
    font-weight: 600;
}

.user{
    margin-top: 16rpx;
    background-color: #fff;
    padding: 32rpx;
}
.userIcon{
    padding-top: 32rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-bottom: 32rpx;
    border-bottom: 1px solid rgba(170, 170, 170, 0.384);
}
.userIcon:last-child{
    border: none;
    padding-bottom: 0;
}
.userIcon .usericon{
    width: 120rpx;
    height: 120rpx;
    background-color: #D9D9D9;
    border-radius: 50%;
    overflow: hidden;
    margin-right:40rpx ;
}
.infoBtn{
    position: absolute;
    width: 32rpx;
    height: 32rpx;
    right: 32rpx;
 
}
.infoBtn image{
    width: 100%;
    height: 100%;
}
.userinfo{
    margin-right: 32rpx;
}

.change{
    margin-top: 16rpx;
    background-color: #fff;
    padding: 32rpx;
}
.changebox{
    position: relative;
    display: flex;
    justify-content: space-between;
    padding-right: 32rpx;
    align-items: center;
}
.changebox .infoBtn{
    right: 0;
}
.subtext{
    font-size: 24rpx;
    color: rgba(0, 0, 0, .25);
}