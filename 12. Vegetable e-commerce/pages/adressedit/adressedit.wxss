/* pages/adressedit/adressedit.wxss */
page {
    background-color: #f5f5f5;
    height: 100%;
}

.collect_top {
    padding-top: 92rpx;
    background-color: #fff;
}

.top_title {
    padding: 18rpx 32rpx;
    text-align: center;
    position: relative;
    font-weight: 600;
}

.top_title image {
    width: 32rpx;
    height: 32rpx;
    vertical-align: middle;
    position: absolute;
    left: 32rpx;
    top: 50%;
    transform: translateY(-50%);
}

.edit {
    margin-top: 16rpx;
    background-color: #fff;
    padding: 32rpx;
}
.edit_top{
    display: flex;
    justify-content: space-between;
}
.edit_top input,.edit_lianxi input{
    text-align: right;
}
.edit_lianxi{
    padding-bottom: 32rpx;
    border-bottom: 1rpx solid rgba(0, 0, 0, .08);
    display: flex;
    justify-content: space-between;
    margin-top: 32rpx;
}
.edit_content{
    display: flex;
    align-items: center;
}
.edit_content image{
    width: 32rpx;
    height: 32rpx;
}
.edit_title{
    font-size:36rpx;
    color: rgba(0, 0, 0, .85);
    font-weight: 600;
}
.edit_content{
    font-size: 28rpx;
    color: rgba(0, 0, 0, .8);
}
.edit_name{
    font-size: 28rpx;
    color: rgba(0, 0, 0, .45);
}

.edit_util{
    display: flex;
    padding: 32rpx 0 0 0;
    align-items: center;
    font-size: 28rpx;
    color: rgba(0, 0, 0, .8);
    justify-content: space-between;
}
.util_default{
    vertical-align: middle;
    display: flex;
    align-items: center;
}
.util_default icon{
    margin-right: 8rpx;
}
.util_button button{
    border: none;
    width: 100%;
    padding: 0;
    background-color: transparent;
    color: rgba(0, 0, 0, .65);
    font-size: 28rpx;
    font-weight: normal;
}

.btn{
    width: 100%;
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    height: 104rpx;
    background-color: #fff;
    box-sizing: border-box;
    /* padding: 32rpx; */
    display: flex;
    box-shadow: 0 0 8px 0 rgba(0, 0, 0, .25);
}
.btn button{
   margin: 18rpx 32rpx;
   width: 100%;
    background-color: #40AA54;
    border-radius: 4rpx;
    font-size: 28rpx;
    color: #fff;
    
}