/* pages/searchview/searchview.wxss */
page {
    background-color: #f5f5f5;
    height: 100%;

}

.container {
    height: 100%;
    width: 100%;
}

.collect_top {
    padding-top: 92rpx;
    background-color: #fff;
    border-bottom: 1rpx solid rgba(0, 0, 0, .08);
}

.top_title {
    padding: 18rpx 32rpx;
    text-align: center;
    position: relative;
    font-weight: 600;
    display: flex;
}

.top_title>image {
    width: 32rpx;
    height: 32rpx;
    vertical-align: middle;
    position: absolute;
    left: 32rpx;
    top: 50%;
    transform: translateY(-50%);
}

.inputbox {
    flex: 1;
    margin-left: 48rpx;
    border-radius: 24rpx;
}

.inputbox input {
    background-color: #F5F5F5;
    border-radius: 24rpx;
    text-align: left;
    padding-left: 24rpx;
    font-size: 24rpx;
}

.placeholder {
    font-size: 24rpx;
}
.oldInfoBox{
    background-color: #fff;
    padding: 38rpx 16rpx 16rpx;
}
.topinfo{
    display: flex;
    justify-content: space-between;
    font-size: 24rpx;
}
.info{
    color: rgba(0, 0, 0, .45);
}
.info_util{
    color:#40AA54 ;
}
.info_util image{
width: 32rpx;
height: 32rpx;
vertical-align: middle;
}

.allinfoBox{
    margin-top: 10rpx;
}
.box{
    display: inline-block;
    margin-right: 32rpx;
    margin-top: 12rpx;
    font-size: 24rpx;
    color: rgba(0, 0, 0, .45);
    background: rgba(0,0,0,0.04);
    padding: 8rpx 16rpx;
    border-radius: 24rpx;
}


.search_top{
    padding: 16rpx 32rpx;
    background-color: #fff;
    display: flex;
    align-items: center;
}
.search_top>view{
    margin-right:32rpx ;
    color: rgba(0, 0, 0, .45);
    font-size: 28rpx;
}
.search_top>view>image{
    width: 32rpx;
    height: 32rpx;
    vertical-align: middle;
}
.searchChoice{
    margin: 24rpx 16rpx;
    width: 100%;
    overflow: scroll; 
    display: flex;
    white-space: nowrap;
}
.choice_box{
    padding: 8rpx 16rpx;
    background-color:rgba(0,0,0,0.04) ;
    display: inline-block;
    margin-right: 16rpx;
    font-size: 28rpx;
    border-radius: 4rpx;
}
.choice_box.active{
background-color: #40AA54;
color: #fff;
}
.box_detials{
    display: flex;
    margin:16rpx ;
    padding: 16rpx;
    background-color: #fff;
    border-radius: 4rpx;
}
.box_img {
    width: 160rpx;
    height: 160rpx;
    background-color: #d9d9d9;
    border-radius: 4rpx;
    margin-right: 16rpx;
}

.box_img image {
    width: 160rpx;
    height: 100%;
}

.box_detail {
    width: 465rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}

.box_title {
    display: -webkit-box;
    overflow: hidden;
    text-overflow: ellipsis;
    word-break: break-all;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
}

.title_name {
    background-color: #40AA54;
    color: #fff;
    font-size: 24rpx;
    padding: 4rpx;
    border-radius: 4rpx;
}

.title_detail {
    font-size: 24rpx;
    margin-left: 16rpx;


}

.box_powerlshell {
    font-size: 24rpx;
    color: rgba(0, 0, 0, .45);
    margin-top: 8rpx;
}

.box_active {
    font-size: 24rpx;
    color: #40AA54;
    margin-top: 16rpx;
}

.box_active text {
    padding: 4rpx;
    border-radius: 4rpx;
    border: 1rpx solid #40AA54;
    margin-right: 16rpx;
}

.box_price {
    display: flex;
    color: #E34D59;
    font-size: 28rpx;
    font-weight: 600;
    margin-top: 20rpx;
    position: relative;
    justify-content: space-between;
}

.priceDetail::first-letter {
    font-size: 32rpx;
}

.add,.even {
    width: 32rpx;
    height: 32rpx;
}
.box_util{
    display: flex;
    align-items: center;
}
.price_det{
    display: flex;
}
.box_util input{
    width: 40rpx;
    text-align: center;
    font-size:24rpx ;
    margin: 0 32rpx;
    background-color: rgba(0, 0, 0, .04);
    color: rgba(0, 0, 0, .8);
}
.add image,.even image {
    width: 100%;
    height: 100%;
}
