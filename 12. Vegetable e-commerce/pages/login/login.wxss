/* pages/login/login.wxss */
.containers{
    padding: 0;
    margin: 0;
}
@import '../../utils/back/back.wxss';
.boxshadow{
    width: 0;
    height: 0;
    box-shadow: 0 0 100px 200px rgba(0, 200, 0, .4);
    position: absolute;
    right: 0;
    top: 0;
}
.containers-box>.title{
    margin-top: 108rpx;
    font-size:64rpx ;
    font-weight: 600;
}
.containers-box{
    padding: 0 80rpx;
}
.containers-box .subtitle{
    color: #00000077;
    font-size: 24rpx;
    margin-top: 16rpx;
}
.inputbox .box{
    margin-top: 96rpx;
}
.boxtitle{
    display: flex;
    justify-content: space-between;
    font-size: 24rpx;
}
.boxtitle .title{
    color: #E34D59;
    font-weight: 600;
}
.inputbox {
    margin-top: 16rpx;
    position: relative;
}
.inputbox input{
    border-bottom: 1px solid #aaa;
    font-size: 28rpx;
}
input::placeholder{
    font-size: 28rpx;
    color: rgba(0, 0, 0, 0.2);
}
.inputbox image{
    position: absolute;
    width: 32rpx;
    height: 32rpx;
    right: 0rpx;
    top: 0;
    z-index: 10;
}

.containers-box .forgetpassword{
    float: right;
    margin-top:32rpx ;
    font-size: 24rpx;
    color: #40AA54;
}
.containers-box .login{
    margin-top: 156rpx;
}
.containers-box .login button{
    width: 100%;
    background-color: #40AA54;
    border-radius: 2px;
    color: #fff;
    font-size: 28rpx;
}