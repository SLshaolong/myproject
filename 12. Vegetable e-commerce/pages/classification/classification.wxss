/* pages/classification/classification.wxss */
page {
    background-color: #f5f5f5;
    height: 100%;

}

.container {
    height: 100%;
}

.collect_top {
    padding-top: 92rpx;
    background-color: #fff;
    border-bottom: 1rpx solid rgba(0, 0, 0, .08);
    display: flex;
    position: fixed;
    width: 100%;
    z-index: 1;
}

.top_title {
    padding: 18rpx 32rpx;
    text-align: center;
    position: relative;
    font-weight: 600;
    display: flex;
    width: 100%;
}

.top_title>image {
    width: 32rpx;
    height: 32rpx;
    vertical-align: middle;
    position: absolute;
    left: 32rpx;
    top: 50%;
    transform: translateY(-50%);
}

.inputbox {
    flex: 1;
    margin-left: 48rpx;
    border-radius: 24rpx;
    flex: 1;
}

.inputbox input {
    background-color: #F5F5F5;
    border-radius: 24rpx;
    text-align: left;
    padding-left: 64rpx;
    font-size: 24rpx;
}

.placeholder {
    font-size: 24rpx;
}

.search {
    position: absolute;
    z-index: 100;
    width: 32rpx;
    height: 32rpx;
    left: 100rpx;
    top: 50%;
    transform: translateY(-50%);
}

.class_box {
    background-color: #fff;
    display: flex;
    padding-bottom: 110rpx;
    padding-top: 180rpx;
}

.class_firstDetail {
    width: 212rpx;
    text-align: left;
    background-color: #f5f5f5;
}

.class_classify {
    padding: 32rpx;
    box-sizing: border-box;
    font-size: 28rpx;
}

.class_classify.active {
    background-color: #fff;
    position: relative;
}

.class_classify.active::before {
    content: "";
    position: absolute;
    display: block;
    height: 80%;
    width: 8rpx;
    background-color: #40aa54;
    left: 0;
    top: 10%;
}

.class_secondDetail {
    flex: 1;
    width: 538rpx;
}

.class_top_title {
    display: flex;
    padding: 20rpx;
    /* height: 40rpx; */
    width: 100%;
    overflow-x: scroll;
    white-space: nowrap;

}

.class_options {
    margin-left: 16rpx;
    font-size: 28rpx;
    padding: 4rpx 16rpx;
    color: rgba(0, 0, 0, .65);
    background-color: #F5F5F5;
}

.class_options:nth-child(1) {
    margin-left: 0;
}

.class_options.active {
    color: #fff;
    background-color: #40AA54;
}

.class_view_box {
    padding: 0 16rpx;
    margin-top: 16rpx;
}

.first_title {
    font-size: 32rpx;
    color: rgba(0, 0, 0, .85);
    font-weight: 600;
}

.second_title {
    display: flex;
    align-items: center;
    font-size: 28rpx;
    color: rgba(0, 0, 0, .45);
    margin: 24rpx 0;
}

.second_title .shale {
    margin-right: 32rpx;
}

.second_title .price image {
    width: 32rpx;
    height: 32rpx;
    vertical-align: middle;
}

.third_detail {
    display: flex;
    margin-bottom: 32rpx;
}

.box_img {
    width: 160rpx;
    height: 160rpx;
    background-color: #d9d9d9;
    border-radius: 4rpx;
    margin-right: 16rpx;
}

.box_img image {
    width: 160rpx;
    height: 100%;
}

.box_detail {
    width: 465rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}

.box_title {
    display: -webkit-box;
    overflow: hidden;
    text-overflow: ellipsis;
    word-break: break-all;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
}

.title_name {
    background-color: #40AA54;
    color: #fff;
    font-size: 24rpx;
    padding: 4rpx;
    border-radius: 4rpx;
}

.title_detail {
    font-size: 24rpx;
    margin-left: 16rpx;


}

.box_powerlshell {
    font-size: 24rpx;
    color: rgba(0, 0, 0, .45);
    margin-top: 8rpx;
}

.box_active {
    font-size: 24rpx;
    color: #40AA54;
    margin-top: 16rpx;
}

.box_active text {
    padding: 4rpx;
    border-radius: 4rpx;
    border: 1rpx solid #40AA54;
    margin-right: 16rpx;
}

.box_price {
    display: flex;
    color: #E34D59;
    font-size: 28rpx;
    font-weight: 600;
    margin-top: 20rpx;
    position: relative;
}

.priceDetail::first-letter {
    font-size: 32rpx;
}

.removeshale {
    font-size: 28rpx;
    font-weight: normal;
    color: rgba(0, 0, 0, .45);
    margin-left: 16rpx;
}

.add {
    position: absolute;
    width: 32rpx;
    height: 32rpx;
    right: 0;
    bottom: 0;
}

.add image {
    width: 100%;
    height: 100%;
}

.disstory {
    overflow: hidden;
    height: 100%;
}

.fuzhubox {
    position: absolute;
    left: 0;
    right: 0;
    bottom: 0;
    top: 0;
    height: 100%;
    background-color: rgba(0, 0, 0, .65);
    z-index: 1;
}

.cart {
    height: 104rpx;
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    display: flex;
    background-color: #fff;
    z-index: 5;
    box-sizing: border-box;
    padding: 16rpx;
    box-shadow: 0 0 8px rgba(0, 0, 0, .45);
}

.image {
    position: absolute;
    width: 144rpx;
    height: 144rpx;
    bottom: 16rpx;
}

.image image {
    width: 100%;
    height: 100%;
    position: relative;
}

.content {
    position: absolute;
    right: 30rpx;
    bottom: 10rpx;
    z-index: 3;
    font-size: 20rpx;
    color: #fff;
    background-color: #E34D59;
    border: 1px solid #fff;
    text-align: center;
    padding: 3rpx;
    border-radius: 50%;
}

.powel_box {
    margin-left: 150rpx;
}

.powel_box .priceAll {
    display: flex;
}

.allprice {
    color: #E34D59;
    font-size: 20rpx;
}

.allprice text {
    font-size: 32rpx;
}

.deleteprice {
    margin-left: 16rpx;
    font-size: 28rpx;
    color: rgba(0, 0, 0, .45);
    text-decoration: line-through;
}

.activeAdd {
    font-size: 24rpx;
    color: rgba(0, 0, 0, .45);
}

.showall {
    margin-left: 64rpx;
    font-size: 24rpx;
    color: #40AA54;
    height: 100%;
    display: flex;
    align-items: center;
}

.showall image {
    width: 32rpx;
    height: 32rpx;
}

.gotoShell {
    /* width: 64rpx; */
    margin-left: 32rpx;
    display: flex;
    align-items: center;
}

.gotoShell button {
    padding: 12rpx 32rpx;
    width: 100%;
    font-size: 28rpx;
    background-color: #40AA54;
    color: #fff;
    border-radius: 64rpx;
    font-weight: normal;
}


.cartDetail {
    position: fixed;
    bottom: 100rpx;
    left: 0;
    right: 0;
    z-index: 4;
}

.detail_top {
    padding: 24rpx 36rpx 16rpx;
    background-color: #F5EED9;
    width: 100%;
    font-size: 28rpx;
    display: flex;
    box-sizing: border-box;
    justify-content: space-between;
    align-items: center;
    border-radius: 16px 16px 0px 0px;
}

.detail_title text {
    font-size: 32rpx;
    color: #40AA54;
}

.detail_util {
    color: #40AA54;
    display: flex;
    align-items: center;
}

.detail_util image {
    width: 32rpx;
    height: 32rpx;
    margin-right: 12rpx;
}

.detail_boxs {
    padding: 32rpx;
    padding-bottom: 64rpx;
    background-color: #fff;
    height: 340rpx;
    overflow-y: scroll;
}

.detail_box {
    display: flex;
    position: relative;
    padding-bottom: 32rpx;
    border-bottom: 1rpx solid rgba(0, 0, 0, .08);
    margin-top: 32rpx;
}

.detail_box:first-child {
    margin-top: 0;
}

.detail_box:last-child {
    border: none;
}

.detail_box>.images {
    width: 120rpx;
    height: 120rpx;
    margin-right: 8rpx;
    background-color: #D9D9D9;
}

.detail_box .images image {
    width: 120rpx;
    height: 120rpx;
}

.box_titles {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}

.top_title_detail {
    font-size: 28rpx;
    font-weight: 600;
    white-space: nowrap;
    overflow: hidden;
    width: 340rpx;
    text-overflow: ellipsis;
}

.price_detail {
    display: flex;
}

.detail_all_price {
    color: #E34D59;
    font-size: 28rpx;
}

.detail_all_price text {
    font-size: 32rpx;
}

.detail_all_delete {
    margin-left: 16rpx;
    font-size: 28rpx;
    text-decoration: line-through;
    color: rgba(0, 0, 0, .45);
}

.box_util {
    display: flex;
    align-items: center;
}

.box_util image {
    width: 32rpx;
    height: 32rpx;
}

.box_util input {
    width: 80rpx;
    text-align: center;
    margin: 0 16rpx;
    background-color: rgba(0, 0, 0, .04);
    font-size: 28rpx;
}

.box_util {
    position: absolute;
    right: 0;
    display: flex;
    height: 100%;
    align-items: center;

}