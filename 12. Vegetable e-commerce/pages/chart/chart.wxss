/* pages/chart/chart.wxss */
page{
    background-color: #f5f5f5;
}
.container{
    position: relative;
    width: 100%;
    padding: 180rpx 32rpx 110rpx;
    box-sizing: border-box;

}
.container_title{
    position: fixed;
    top: 0;
    right: 0;
    left: 0;
    z-index: 10;
    height: 180rpx;
    overflow: hidden;

}
.container_title .container_bgc image{
    width: 100%;
    height: 400rpx;
}
.container_title>.text{
    position: absolute;
    z-index: 1;
    left: 0;
    right: 0;
    top: 110rpx;
    text-align: center;
    color: #fff;
    font-weight: 600;
}
.containboxs{
    background-color: #fff;
    box-sizing: border-box;
    border-radius: 4rpx;
    padding-top: 16rpx;
}

.collect_box {
    display: flex;
    background-color: #fff;
    margin-top: 16rpx;
    padding: 32rpx;
   border-bottom: 1rpx solid rgba(0, 0, 0, .08);
}

image {
    width: 100%;
    height: 100%;
}

.box_checkbox {
    margin-right: 16rpx;
    display: flex;
    align-items: center;
}

.box_img {
    width: 160rpx;
    height: 160rpx;
    background-color: #d9d9d9;
    border-radius: 4rpx;
    margin-right: 16rpx;
}
.box_img image{
    width: 160rpx;
}
.box_detail {
    width: 465rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}
.box_title{
    display: -webkit-box ;
    overflow: hidden;
    text-overflow: ellipsis;
    word-break: break-all;
    -webkit-box-orient: vertical;
    -webkit-line-clamp:2;
}
.title_name {
    background-color: #40AA54;
    color: #fff;
    font-size: 24rpx;
    padding: 4rpx;
    border-radius: 4rpx;
}

.title_detail {
    font-size: 24rpx;
    margin-left: 16rpx;


}

.box_powerlshell {
    font-size: 24rpx;
    color: rgba(0, 0, 0, .45);
    margin-top: 8rpx;
}

.box_active {
    font-size: 24rpx;
    color: #40AA54;
    margin-top: 16rpx;
}

.box_active text {
    padding: 4rpx;
    border-radius: 4rpx;
    border: 1rpx solid #40AA54;
    margin-right: 16rpx;
}

.box_price {
    display: flex;
    color: #E34D59;
    font-size: 28rpx;
    font-weight: 600;
    margin-top: 20rpx;
    justify-content: space-between;
}
.left{display: flex;}
.priceDetail::first-letter {
    font-size: 32rpx;
}
.right{
    display: flex;
    align-items: center;

}
.right image{
    width: 32rpx;
    height: 32rpx;
}
.right input{
    width: 44rpx;
    margin: 0 16rpx;
    background-color: rgba(0, 0, 0, .04);
    text-align: center;
    color: rgba(0, 0, 0, .85);
    font-size: 28rpx;
}


.cart {
    height: 104rpx;
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    display: flex;
    background-color: #fff;
    z-index: 5;
    box-sizing: border-box;
    padding: 16rpx;
    box-shadow: 0 0 8px rgba(0, 0, 0, .45);
}

.image {
    position: absolute;
    width: 144rpx;
    height: 144rpx;
    bottom: 16rpx;
}

.image image {
    width: 100%;
    height: 100%;
    position: relative;
}

.content {
    position: absolute;
    right: 30rpx;
    bottom: 10rpx;
    z-index: 3;
    font-size: 20rpx;
    color: #fff;
    background-color: #E34D59;
    border: 1px solid #fff;
    text-align: center;
    padding: 3rpx;
    border-radius: 50%;
}

.powel_box {
    margin-left: 150rpx;
}

.powel_box .priceAll {
    display: flex;
}

.allprice {
    color: #E34D59;
    font-size: 20rpx;
}

.allprice text {
    font-size: 32rpx;
}

.deleteprice {
    margin-left: 16rpx;
    font-size: 28rpx;
    color: rgba(0, 0, 0, .45);
    text-decoration: line-through;
}

.activeAdd {
    font-size: 24rpx;
    color: rgba(0, 0, 0, .45);
}

.showall {
    margin-left: 32rpx;
    font-size: 24rpx;
    color: #40AA54;
    height: 100%;
    display: flex;
    align-items: center;
}

.showall image {
    width: 32rpx;
    height: 32rpx;
}

.gotoShell {
    width: 150rpx;
    margin-left: 32rpx;
    display: flex;
    align-items: center;
    flex: 1;
}

.gotoShell button {
    padding: 12rpx 32rpx;
    width: 100%;
    font-size: 28rpx;
    background-color: #40AA54;
    color: #fff;
    border-radius: 64rpx;
    font-weight: normal;
}
