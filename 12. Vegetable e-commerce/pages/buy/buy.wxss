/* pages/buy/buy.wxss */
page {
    background-color: #f5f5f5;
    height: 100%;
}

.collect_top {
    padding-top: 92rpx;
    background-color: #fff;
}

.top_title {
    padding: 18rpx 32rpx;
    text-align: center;
    position: relative;
    font-weight: 600;
}

.top_title image {
    width: 32rpx;
    height: 32rpx;
    vertical-align: middle;
    position: absolute;
    left: 32rpx;
    top: 50%;
    transform: translateY(-50%);
}
.top_buy{
    margin: 16rpx 0;
    background-color: #fff;
    padding: 32rpx;
}
.top_box{
    display: flex;
    justify-content: space-between;
    font-size: 28rpx;
    padding-bottom: 32rpx;
    margin-top: 32rpx;
    border-bottom: 1rpx solid rgba(0, 0, 0, .08);
}
.top_box:first-child{
    margin-top:0;
}
.top_box:last-child{
    border: none;
    padding-bottom: 0;
}
.top_box .text{
    color: rgba(0, 0, 0, .45);
}
.img{
    width: 32rpx;
    height: 32rpx;
}
.img image,.rightbox image{
    width: 32rpx;
    height: 32rpx;
}
.right{
    display: flex;
    color: #40AA54;
    font-size: 28rpx;
    align-items: center;
}
.right image{
    margin-left: 8rpx;
}

.buy_details{
    margin-top: 16rpx;
    background-color: #fff;
    padding: 32rpx;
}
.detail_box{
    display: flex;
    position: relative;
    padding-bottom: 32rpx;
    border-bottom: 1rpx solid rgba(0, 0, 0, .08);
    margin-top: 32rpx;
}
.detail_box:first-child{
    margin-top:0;
}
.detail_box:last-child{
    border: none;
    padding-bottom: 0;
}
.boximg{
    width: 120rpx;
    height: 120rpx;
    border-radius: 4rpx;
    background-color: #D9D9D9;
}
.boximg image{
    width: 120rpx;
    height: 120rpx;
}
.boxtitle{
    margin-left: 16rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}
.titlebox{
    font-size: 28rpx;
    color: rgba(0, 0, 0, .8);
    font-weight: 600;
    width: 340rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}
.allbox{
    font-size:24rpx ;
    color: rgba(0, 0, 0, .45);
}
.price{
    font-size:28rpx ;
    color: rgba(0, 0, 0, .65);
    position: absolute;
    right: 0;
    height: 100%;
    display: flex;
    align-items: center;
}
.paydetail{
    padding: 0 32rpx 32rpx;
    background-color: #fff;
}
.pay_box{
    margin-bottom: 32rpx;
    display: flex;
    font-size: 28rpx;
    justify-content: space-between;
}
.name{
    color: rgba(0, 0, 0, .45);
}
.priceName.active{
    color: #E34D59;
}
.pay_box:last-child{
    margin-bottom: 0;
}


.paybutton{
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    height: 105rpx;
    box-shadow: 0 0 8rpx 0 rgba(0, 0, 0, .25);
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 32rpx;
    box-sizing: border-box;
}
.left{
    font-size: 24rpx;
    display: flex;
    align-items: center;
}
.allPrice{
    color: #E34D59;
    font-size: 36rpx;
    margin: 0 16rpx;

}
.det{
    font-size: 24rpx;
    color: rgba(0, 0, 0, .45);
}
.right{
    display: flex;
    align-items: center;
    width: 190rpx;
}
.right button{
    padding: 12rpx 32rpx;
    background-color: #40AA54;
    font-size: 28rpx;
    font-weight: normal;
    color: #fff;
    border-radius: 50rpx;
}