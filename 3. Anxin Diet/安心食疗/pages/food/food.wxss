page {
    background-color: #f1f1f1;
}

/* 头部搜索栏 */
.header {
    display: flex;
    padding: 10rpx;
    align-items: center;
    background-color: #fff;
}

.location {
    width: 100rpx;
    text-align: center;

}

.search {
    background-color: #f1f1f1;
    color: #acacac;
    flex: 1;
    font-size: 28rpx;
    padding: 10rpx;
    border-radius: 20rpx;
}

/* 分类 */
.product-type {
    background-color: #fff;
    padding: 20rpx;
    display: flex;
    flex-wrap: wrap;
}

.item {
    width: 25%;
    text-align: center;
    font-size: 26rpx;
    color: #666;
    margin-bottom: 20rpx;
}

.item image {
    width: 74rpx;
    height: 74rpx;
}

