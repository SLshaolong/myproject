/* pages/mywallent/mywallent.wxss */
.container {
    width: 100%;
    background-color: #F5F5F5;
    position: relative;
}

.bac {
    position: absolute;
    width: 100%;
}

.bac image {
    width: 100%;

}

.title {
    display: inline-block;
    position: absolute;
    top: 100rpx;
    left: 50%;
    transform: translateX(-50%);
    color: #fff;
    font-weight: 600;
}

.wallentcontainer {
    width: 343px;
    background-color: #fff;
    height: 191px;
    position: relative;
    top: 220rpx;
    margin: 0 auto;
    border-radius: 4px;
    box-sizing: border-box;
    padding: 32rpx;
}

.wallentcontainer .topimg {
    width: 266rpx;
    height: 266rpx;
    position: absolute;
    right: 0;
    top: 0;

}

.wallentcontainer .topimg image {
    width: 100%;
    height: 100%;
}

.mywallent {
    display: flex;
    justify-content: space-between;
}

.mywallent .text {
    font-size: 36rpx;
    font-weight: 600;
}

.mywallent image {
    width: 48rpx;
    height: 48rpx;
}

.wallentData {
    text-align: center;
    margin-top: 32rpx;
    color: #40AA54;
    font-weight: 600;
    font-size: 48rpx;
    padding-bottom: 32rpx;
    border-bottom: 1px solid rgba(170, 170, 170, 0.301);
}

.wallentData text {
    font-size: 28rpx;
}

.lunchwallent {
    margin-top: 66rpx;
    display: flex;
    padding: 0 32rpx;
    justify-content: space-between;
}

.lunchwallent .lunchbox .subTitle {
    font-size: 24rpx;
    color: #00000075;
    margin-bottom: 16rpx;
}

.lunchwallent .lunchbox .beforeData {
    font-size: 32rpx;
    color: #40AA54;
    font-weight: 600;
}

.top {
    margin-top: 240rpx;
}

.sizedeatil {
    background-color: #fff;
    margin: 0 32rpx;
    border-radius: 8rpx;
    box-sizing: border-box;
    padding: 32rpx;
}

.sizedeatil .tit {
    font-size: 36rpx;
    font-weight: 600;
}

.sizedeatil .det {
    margin-top: 24rpx;
    padding-bottom: 24rpx;
    border-bottom: 1rpx solid rgba(0, 0, 0, 0.089);
    display: flex;
    position: relative;
}

.det .left {
    width: 120rpx;
    height: 120rpx;
    background-color: #D9D9D9;
    border-radius: 4rpx;
    overflow: hidden;
    margin-right: 16rpx;
}
.det .left image{
    width: 100%;
    height: 100%;
}
.det .middle{
    margin-left: 0;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}
.middle .m-top{
    font-size: 28rpx;
    font-weight: 600;
}
.middle .date{
    font-size: 24rpx;
    color: rgba(0, 0, 0, .45);
}
.last{
    display: flex;
    align-items: center;
    position: absolute;
    right: 32rpx;
    height: 100%;
}
.red{
    color:#E34D59 ;
}
.green{
    color:#40AA54 ;
}
.det:last-child{
    padding-bottom: 0;
    border: none;
}