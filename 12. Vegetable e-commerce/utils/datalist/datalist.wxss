.order_box {
    margin: 16rpx;
    background-color: #fff;
    padding: 32rpx;
}

.order_box_top {
    display: flex;
    justify-content: space-between;
    font-size: 24rpx;
    font-weight: 600;
    color: rgba(0, 0, 0, .85);
    padding-bottom: 16rpx;
    border-bottom: 1rpx solid rgba(0, 0, 0, .08);
}

.order_box_status {
    font-weight: normal;
    color: rgba(0, 0, 0, .25);
}

.order_box_order {
    display: flex;
    padding-bottom: 16rpx;
    position: relative;

}

.orderImg {
    background-color: #D9D9D9;
    width: 120rpx;
    height: 120rpx;
    border-radius: 4rpx;
    margin-right: 16rpx;
}

.orderImg image {
    width: 100%;
    height: 100%;
}

.orderDetail {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    width: 350rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;

}

.detail_title {
    font-size: 24rpx;
    font-weight: 600;
}

.detail_sub {
    font-size: 28rpx;
    font-weight: 600;
    display: flex;
    color: #E34D59;
    align-items: flex-end;
}

.subFirst::first-letter {
    font-size: 36rpx;
}

.subtitle {
    margin-left: 16rpx;
    color: rgba(0, 0, 0, .45);
    font-size: 24rpx;
    font-weight: 600;
    text-decoration: line-through;
}

.orderSize {
    position: absolute;
    right: 0;
    bottom: 16rpx;
    font-size: 24rpx;
    color: rgba(0, 0, 0, .45);
}

.order_box_order:first-child {
    margin-top: 16rpx;
}

.order_box_order:last-child {
    border-bottom: 1rpx solid rgba(0, 0, 0, .08);
}

.order_all {
    display: flex;
    margin-top: 16rpx;
    align-items: center;
    position: relative;
}

.allPrice {
    font-size: 24rpx;
    color: rgba(0, 0, 0, .65);
    margin-right: 16rpx;
}

.allNum {
    font-size: 36rpx;
    color: #E34D59;
    font-weight: 600;
}

.removeNum {
    font-size: 24rpx;
    margin-left: 16rpx;
    color: rgba(0, 0, 0, .45);
    text-decoration: line-through;
}

.right {
    position: absolute;
    right: 0;

}

.right button {
    padding: 0;
    font-size: 24rpx;
    width: 170rpx;
    padding: 12rpx 32rpx;
    background-color: #fff;
    border: 1rpx solid rgba(0, 0, 0, .08);
    border-radius: 4rpx;
}

.orange {
    color: #ED7B2F;
}

.reomove {
    margin-right: 0;
    width: 100%;
    font-size: 24rpx;
    right: 132rpx;
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
}

.green {
    color: #40AA54;
    border-color: #40AA54 !important;
}