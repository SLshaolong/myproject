/* pages/mycollect/mycollect.wxss */
page {
    background-color: #f5f5f5;
    height: 100%;
}

.collect_top {
    padding-top: 92rpx;
    background-color: #fff;
}

.top_title {
    padding: 18rpx 32rpx;
    text-align: center;
    position: relative;
    font-weight: 600;
}

.top_title image {
    width: 32rpx;
    height: 32rpx;
    vertical-align: middle;
    position: absolute;
    left: 32rpx;
    top: 50%;
    transform: translateY(-50%);
}

.collect_box {
    display: flex;
    background-color: #fff;
    margin-top: 16rpx;
    padding: 32rpx;
   
}

image {
    width: 100%;
    height: 100%;
}

.box_checkbox {
    width: 32rpx;
    margin-right: 16rpx;
    display: flex;
    align-items: center;
}
.box_checkbox icon{
    height: 32rpx;
    width: 32rpx;
}
.box_img {
    width: 160rpx;
    height: 160rpx;
    background-color: #d9d9d9;
    border-radius: 4rpx;
    margin-right: 16rpx;
}

.box_detail {
    width: 465rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}
.box_title{
    display: -webkit-box ;
    overflow: hidden;
    text-overflow: ellipsis;
    word-break: break-all;
    -webkit-box-orient: vertical;
    -webkit-line-clamp:2;
}
.title_name {
    background-color: #40AA54;
    color: #fff;
    font-size: 24rpx;
    padding: 4rpx;
    border-radius: 4rpx;
}

.title_detail {
    font-size: 24rpx;
    margin-left: 16rpx;


}

.box_powerlshell {
    font-size: 24rpx;
    color: rgba(0, 0, 0, .45);
    margin-top: 8rpx;
}

.box_active {
    font-size: 24rpx;
    color: #40AA54;
    margin-top: 16rpx;
}

.box_active text {
    padding: 4rpx;
    border-radius: 4rpx;
    border: 1rpx solid #40AA54;
    margin-right: 16rpx;
}

.box_price {
    display: flex;
    color: #E34D59;
    font-size: 28rpx;
    font-weight: 600;
    margin-top: 20rpx;
}

.priceDetail::first-letter {
    font-size: 32rpx;
}
.container{
    padding-bottom: 110rpx;
   
}

.bottombar{
    position: fixed;
    left: 0;
    right: 0;
    bottom: 0;
    height: 104rpx;
    background-color: #fff;
    display: flex;
    align-items: center;
    box-sizing: border-box;
    padding: 32rpx;
    font-size: 28rpx;
    justify-content: space-between;
}
.allselect{
    display: flex;
    align-items: center;
}
.allselect icon{
    margin-right: 8rpx;
}
.rightbtn button{
    padding: 0;
    font-size: 28rpx;
    font-weight: normal;
    width: 100%;
    padding: 8rpx 32rpx;
    border-radius: 32rpx;
    background-color: #fff;
    border:1rpx solid #E34D59 ;
    color: #E34D59;
}