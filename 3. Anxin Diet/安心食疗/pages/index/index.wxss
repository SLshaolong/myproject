/* pages/index/index.wxss */
.banner {
    position: relative;
    height: 338rpx;
}

.banner swiper {
    width: 100%;
    height: 338rpx;

}

.banner swiper image {
    width: 100%;
    height: 338rpx;
}

.banner swiper-item {
    position: relative;
}

.banner .desc {
    position: absolute;
    background-color: rgba(0, 0, 0, .5);
    color: #fff;
    left: 0;
    right: 0;
    bottom: 0;
    padding: 10rpx;
    font-size: 24rpx;
    text-align: center;
    overflow: hidden;
}

.banner .banner-item {
    position: absolute;
    right: 80rpx;
    color: #fff;
    font-size: 24rpx;
    bottom: 10rpx;
}

/* 每日一测 */
.one-day {
    display: flex;
    margin: 34rpx 0;
    padding: 0 20rpx;
    justify-content: space-around;
}

.one-item {
    text-align: center;
    font-size: 28rpx;
    color: #676565;
}

.one-item image {
    width: 306rpx;
    height: 185rpx;
}

/* 每日推荐 */
.list {
    padding: 0 20rpx;
}

.item {
    padding-bottom: 18rpx;
    border-bottom: 1rpx solid #eee;
    position: relative;
    margin-bottom: 20rpx;
}

.title {
    font-size: 30rpx;
    color: #1a1a1a;
    margin-bottom: 18rpx;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis
}

.item-wrapper {
    display: flex;
}

.img image {
    width: 210rpx;
    height: 140rpx;
}

.info {
    color: #777;
    font-size: 26rpx;
    padding-left: 20rpx;
    word-break: break-all;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    height: 100rpx;
}

.ready-num {
    position: absolute;
    right: 20rpx;
    bottom: 20rpx;
    font-size: 24rpx;
    color: #4d4d4d;
}

.ready-num text {
    color: red;
}